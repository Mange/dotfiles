[module/media-title]
type = custom/script
exec = ~/.config/polybar/media
click-left = playerctl play-pause
click-right = playerctl next

[module/media-play-pause]
type = custom/script
exec = ~/.config/polybar/play-pause
click-left = playerctl play-pause
format-padding = 1
format-foreground = ${colors.foreground-muted}

[module/media-previous]
type = custom/text
content-padding = 1
content = ÔÅà
content-foreground = ${colors.foreground-muted}
click-left = playerctl previous

[module/media-next]
type = custom/text
content = ÔÅë
