#!/usr/bin/env bash
# Thin shim that clones the repo if missing. Uses the "mange-" prefix for the
# day where the upstream repo merges my changed; when I can add that shim that
# clones or changed origin for the existing clone.

if ! [[ -d ~/Projects/bitwarden-rofi ]]; then
  git clone git@github.com:Mange/bitwarden-rofi ~/Projects/bitwarden-rofi || rofi -e "Failed to clone repo."
fi

exec ~/Projects/bitwarden-rofi/bwmenu "$@"
