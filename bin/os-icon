#!/bin/sh
# Only look for the OSes that I'm somewhat likely to be using.

determine_dist() {
  dist=linux
  if [ -f /etc/os-release ]; then
    dist=$(awk -F '=' '/^ID=/ { print $2 }' /etc/os-release)
  fi

  case "$dist" in
    arch*)
      echo "ïŒƒ "
      ;;
    *debian*)
      echo "ïŒ†"
      ;;
    *ubuntu*)
      echo "ïŒ›"
      ;;
    *raspbian*)
      echo "ïŒ•"
      ;;
    *coreos*)
      echo "ïŒ…"
      ;;
    *gentoo*)
      echo "ïŒ"
      ;;
    *centos* | *clearos*)
      echo "ïŒ„"
      ;;
    *alpine*)
      echo "ïŒ€"
      ;;
    *nixos*)
      echo "ïŒ“"
      ;;
    *)
      echo "ï…¼"
      ;;
  esac
}

# Assume Linux if OSTYPE is missing.
# shellcheck disable=3028
case "${OSTYPE:-linux}" in
  linux*)
    determine_dist
    ;;
  *)
    "ğŸ–³ "
esac
