#!/bin/sh

# Requires swaylock-effects to be installed.
swaylock \
  --screenshots \
  --clock \
  --indicator-idle-visible \
  --effect-vignette 0.5:0.5 \
  --effect-pixelate 8 \
  --ring-color c9cbff \
  --inside-color 302d41 \
  --text-color d9e0ee \
  --ring-clear-color fae3b0 \
  --inside-clear-color 302d41 \
  --text-clear-color fae3b0 \
  --ring-caps-lock-color e8a2af \
  --inside-caps-lock-color e8a2af \
  --text-caps-lock-color 161320 \
  --ring-wrong-color f28fad \
  --inside-wrong-color f28fad \
  --text-wrong-color d9e0ee \
  --ring-ver-color b5e8e0 \
  --inside-ver-color b5e8e0 \
  --text-ver-color 161320 \
  --bs-hl-color f8bd96 \
  --key-hl-color 96cdfb \
  --separator-color 1a1826 \
  "$@"
