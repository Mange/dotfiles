#!/usr/bin/env bash
# Dynamic startup programs that I cannot represent well in i3 config.
set -e

case "$(hostname)" in
  bilquis)
    # Natural scrolling
    synclient HorizScrollDelta=-113
    synclient VertScrollDelta=-113

    # Palm detection
    synclient PalmDetect=1

    # Disable trackpad completely for 1.5 seconds when typing. This avoids
    # accidental clicks and focus change when typing on laptop keyboard.
    # -k means ignore modifier keys (so I can still hold shift and use
    # trackpad)
    # -d means daemonize
    syndaemon -i 1.5 -k -d
    ;;
  *)
    ;;
esac
