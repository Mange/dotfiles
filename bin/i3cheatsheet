#!/usr/bin/bash

# TODO: Stop hardcoding the path
image_file="$HOME/Projects/dotfiles/keyboard/super_overlay.png"
title="i3 cheatsheet"

# Kill the program if already running
if ! pkill -TERM --full "$title"; then
  # â€¦or start it if not running.
  feh --image-bg black --auto-zoom --borderless --title "i3 cheatsheet" "$image_file"
fi
