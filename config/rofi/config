! vim: ft=xdefaults

rofi.theme: ~/.config/rofi/dark-theme.rasi
rofi.show-icons: true

! Scale automatically to HiDPI screens
rofi.dpi: 1

rofi.terminal: i3-sensible-terminal

! Tab to switch between modi.
rofi.kb-row-tab:
rofi.kb-mode-next: Tab

! Shift-Tab selects previous mode, instead of previous row.
! (ISO_Left_tab seems to be real Shift+Tab on my KB)
rofi.kb-row-up: Up
rofi.kb-mode-previous: Shift+Tab,ISO_Left_Tab

rofi.kb-remove-word-back: Control+w
rofi.kb-clear-line: Control+l
