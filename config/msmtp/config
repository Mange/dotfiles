defaults

# Force TLS
port 587
tls on

account mange
from me@mange.dev
host smtp.zoho.eu
port 465
tls on
tls_starttls off
auth on
user me@mange.dev
passwordeval gpg2 -q --for-your-eyes-only --no-tty -d ~/Security/mbsync_mange_dev.gpg

account gmail
from magnus.bergmark@gmail.com
host smtp.gmail.com
auth on
user magnus.bergmark@gmail.com
passwordeval gpg2 -q --for-your-eyes-only --no-tty -d ~/Security/mbsync_gmail_personal.gpg

account devbox : gmail
from magnus@devbox.com
user magnus@devbox.com
passwordeval gpg2 -q --for-your-eyes-only --no-tty -d ~/Security/mbsync_gmail_devbox.gpg

account default : mange
