[bar/core]
override-redirect = false
locale = sv_SE.UTF-8
enable-ipc = true

fixed-center = true

background = ${gruvbox.dark0_transparent}
foreground = ${gruvbox.light1}
line-color = ${gruvbox.dark0_transparent}
line-size = ${env:POLYBAR_BAR_PADDING:4}

[bar/base]
inherit = bar/core

monitor = ${env:MONITOR}
font-0 = ${env:POLYBAR_FONT_0}
font-1 = ${env:POLYBAR_FONT_1}
font-2 = ${env:POLYBAR_FONT_2}

height = ${env:POLYBAR_BAR_HEIGHT:34}

; Make cursor look like the pointer (hand) when hovering clickable modules
cursor-click = pointer

[bar/primary]
inherit = bar/base
top = true

modules-left = i3 media-controls
modules-center = window-title
modules-right = task-counters mailboxes pending-updates weather volume battery wifi redshift clock time

tray-detached = false
tray-position = right
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = ${env:POLYBAR_TRAY_SIZE:24}
tray-padding = 4
tray-background = ${gruvbox.dark0_transparent}
tray-scale = ${env:POLYBAR_TRAY_SCALE:1.0}

[bar/secondary]
inherit = bar/base
top = true

modules-left = i3
modules-center = window-title
modules-right = battery clock time

tray-position = none

[module/base]
format-padding = 1
format-overline = ${gruvbox.dark0_transparent}
format-underline = ${gruvbox.dark0_transparent}

[module/media-controls]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/media
click-left = playerctl play-pause
click-right = run-or-raise 'class = "Spotify"' spotify

[module/task-counters]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/task-counters
interval = 60
click-left = toggle-dropdown dropdown_vit kitty --class dropdown_vit vit
click-right = kitty vit

[module/i3]
inherit = module/base
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
fuzzy-match = true

ws-icon-0 = 1:System;
ws-icon-1 = 2:Code;
ws-icon-2 = 3:Browse;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 8:Game;
ws-icon-6 = 9:Media;
ws-icon-7 = 10:Chat;
ws-icon-default = 

format = "<label-state> <label-mode>"

label-mode = "  %mode%  "
label-mode-background = ${gruvbox.bright_red_transparent}

# Focused is the workspace that is currently getting commands
label-focused = " %{B#778f3f71} %index% %{B#55d3869b} %icon% %name% %{B-}"

# Unfocused are workspaces that are not visible
label-unfocused = " %{B#cc3c3836} %index% %{B#aa3c3836} %icon% %name% %{B-}"

# Urgent are workspaces with important events
label-urgent = " %{B#77af3a03} %index% %{B#55fe8019} %icon% %name% %{B-}"

# Visible are selected workspaces on other screens
label-visible = " %{B#77d3869b} %index% %{B#553c3836} %icon% %name% %{B-}"

[module/window-title]
inherit = module/base
type = internal/xwindow
; NOTE: Counts the invisible %{} tokens, so this is (37 +) 50
label-maxlen = 87

label =" %{B#cc3c3836} 类 %{B#aa3c3836} %title% %{B-}"
label-empty =

[module/clock]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/clock-icon
format-background = ${gruvbox.faded_aqua_transparent1}

[module/time]
inherit = module/base
type = internal/date
label = %date% %time%
date = %F%
date-alt = %A vecka %V
time = %H:%M
interval = 1
format-background = ${gruvbox.bright_aqua_transparent}

[module/mailboxes]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/mailboxes
interval = 120

[module/pending-updates]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/pending-updates
interval = 240
click-left = kitty --hold zsh -c "sudo pacman -Syu"

[module/weather]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/weather
interval = 600
click-left = kitty --hold weather
click-right =

[module/redshift]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/redshift-status
interval = 60
click-left = redshift-toggle
click-right =

[module/volume]
inherit = module/base
type = internal/pulseaudio

format-volume = "<ramp-volume><label-volume>"
format-muted = "%{B#cc282828}  %{B-}<label-muted>"

format-volume-overline = ${gruvbox.dark0_transparent}
format-volume-underline = ${gruvbox.dark0_transparent}
format-muted-overline = ${gruvbox.dark0_transparent}
format-muted-underline = ${gruvbox.dark0_transparent}

label-volume = " %percentage:3%% "
label-volume-background = ${gruvbox.bright_blue_transparent}
; label-muted = " "
label-muted = " %percentage:3%% "
label-muted-background = ${gruvbox.dark0_transparent1}

ramp-volume-0 = "  "
ramp-volume-1 = "  "
ramp-volume-2 = "  "
ramp-volume-background = ${gruvbox.faded_blue_transparent1}

[module/wifi]
inherit = module/base
type = internal/network
interface = ${env:POLYBAR_WIFI_DEVICE:wlp110s0}
interval = 3.0
format-connected-padding = 0
format-disconnected-padding = 0

; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = <label-connected>
format-connected-prefix = ""
format-connected-prefix-padding = 1
format-connected-prefix-background = ${gruvbox.faded_green_transparent1}
label-connected-background = ${gruvbox.bright_green_transparent}
label-connected-padding = 1
format-connected-overline = ${gruvbox.dark0_transparent}
format-connected-underline = ${gruvbox.dark0_transparent}

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>
format-disconnected-prefix = ""
format-disconnected-prefix-padding = 1
format-disconnected-prefix-background = ${gruvbox.faded_red_transparent1}
label-disconnected-background = ${gruvbox.bright_red_transparent}
label-disconnected-padding = 1
format-disconnected-overline = ${gruvbox.dark0_transparent}
format-disconnected-underline = ${gruvbox.dark0_transparent}

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <animation-packetloss> <label-connected>
animation-packetloss-padding = 1
animation-packetloss-background = ${gruvbox.faded_red_transparent1}
label-packetloss-background = ${gruvbox.bright_red_transparent}
label-packetloss-padding = 1
format-packetloss-overline = ${gruvbox.dark0_transparent}
format-packetloss-underline = ${gruvbox.dark0_transparent}

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
label-connected = %essid% %signal:3%%

; Available tokens:
;   %ifname%    [wireless+wired]
; Default: (none)
label-disconnected =

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %linkspeed% [wired]
; Default: (none)
;label-packetloss = %essid%
;label-packetloss-foreground = #eefafafa

; Only applies if <animation-packetloss> is used
animation-packetloss-0 = ⚠
animation-packetloss-1 = 
; Framerate in milliseconds
animation-packetloss-framerate = 500

[module/battery]
inherit = module/base
type = internal/battery
full-at = 100

format-charging = <animation-charging><label-charging>
format-discharging = "<ramp-capacity><label-discharging>%{B-}"
format-full = <ramp-capacity><label-full>
format-charging-padding = 2
format-discharging-padding = 2
format-full-padding = 2

format-charging-overline = ${gruvbox.dark0_transparent}
format-charging-underline = ${gruvbox.dark0_transparent}
format-discharging-overline = ${gruvbox.dark0_transparent}
format-discharging-underline = ${gruvbox.dark0_transparent}
format-full-overline = ${gruvbox.dark0_transparent}
format-full-underline = ${gruvbox.dark0_transparent}

label-full-background = ${gruvbox.bright_green_transparent}
label-full-padding = 1
label-charging-background = ${gruvbox.bright_orange_transparent}
label-charging-padding = 1
; label-discharging-background = ${gruvbox.bright_orange_transparent}
label-discharging-padding = 1

animation-charging-background = ${gruvbox.faded_orange_transparent1}
animation-charging-0 = "  "
animation-charging-1 = "  "
animation-charging-2 = "  "
animation-charging-3 = "  "
animation-charging-4 = "  "
animation-charging-framerate=1500

ramp-capacity-foreground = ${gruvbox.light1}
ramp-capacity-0 = "%{B#779d0006}  %{B#55fb4934}"
ramp-capacity-1 = "%{B#779d0006}  %{B#55fb4934}"
ramp-capacity-2 = "%{B#77af3a03}  %{B#55fb4934}"
ramp-capacity-3 = "%{B#7779740e}  %{B#55b8bb26}"
ramp-capacity-4 = "%{B#7779740e}  %{B#55b8bb26}"

