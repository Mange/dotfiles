;:set syn=dosini

[settings]
screenchange-reload = false
throttle-ms = 50
throttle-limit = 5
compositing-underline = source
compositing-overline = source
compositing-background = source

[theme]
include-file = /home/mange/.config/polybar/theme.ini

[bar/core]
override-redirect = false
locale = sv_SE.UTF-8
enable-ipc = true

fixed-center = true

foreground = ${theme.foreground}
background = ${theme.background}
line-color = ${theme.background}
line-size = ${env:POLYBAR_BAR_PADDING:4}

[bar/base]
inherit = bar/core

monitor = ${env:MONITOR}
font-0 = ${env:POLYBAR_FONT_0}
font-1 = ${env:POLYBAR_FONT_1}
font-2 = ${env:POLYBAR_FONT_2}
font-3 = "Symbols Nerd Font:scale=48;4"

height = ${env:POLYBAR_BAR_HEIGHT:34}

; Make cursor look like the pointer (hand) when hovering clickable modules
cursor-click = pointer

[bar/primary]
inherit = bar/base
top = true

modules-left = i3 media-info
modules-center = clock date
modules-right = task-counters mailboxes volume wifi battery

tray-detached = false
tray-position = right
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = ${env:POLYBAR_TRAY_SIZE:24}
tray-padding = 4
tray-background = ${theme.background}
tray-scale = ${env:POLYBAR_TRAY_SCALE:1.0}

[bar/secondary]
inherit = bar/base
top = true

modules-left = i3 media-info
modules-center = clock date
modules-right = task-counters mailboxes volume wifi battery-warning

tray-position = none

[module/base]
format-padding = 1
format-margin = 1

[module/task-counters]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/task-counters
interval = 60
click-left = toggle-dropdown dropdown_vit kitty --class dropdown_vit vit
click-right = kitty vit

[module/i3]
inherit = module/base
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
fuzzy-match = true

ws-icon-0 = 1:System;
ws-icon-1 = 2:Code;
ws-icon-2 = 3:Browse;
ws-icon-3 = 4;➍
ws-icon-4 = 5;➎
ws-icon-5 = 6;➏
ws-icon-6 = 7;❼
ws-icon-7 = 8:Game;
ws-icon-8 = 9:Media;
ws-icon-9 = 10:Chat;
ws-icon-default = 

format = "<label-state> <label-mode>"

label-mode = "  %mode%  "
label-mode-background = ${theme.red_background}

# Focused is the workspace that is currently getting commands
label-focused = "  %icon%  "
label-focused-background = ${theme.purple_background0}
label-focused-font = 4

# Unfocused are workspaces that are not visible
label-unfocused = "  %icon%  "
label-unfocused-font = 4

# Urgent are workspaces with important events
label-urgent = "  %icon%  "
label-urgent-background = ${theme.orange_background}
label-urgent-font = 4

# Visible are selected workspaces on other screens
label-visible = "  %icon%  "
label-visible-background = ${theme.purple_background1}
label-visible-font = 4

[module/media-info]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/media
click-left = playerctl play-pause
click-right = run-or-raise 'class = "Spotify"' spotify-with-hidpi-support

[module/window-title]
inherit = module/base
type = internal/xwindow
label-maxlen = 40

label = "%title%"
label-empty =

[module/clock]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/clock
interval = 30

[module/date]
inherit = module/base
type = internal/date
label =  %date%
date = %a %d %b (v%V)
interval = 30

[module/mailboxes]
inherit = module/base
type = custom/ipc
hook-0 = ~/.config/polybar/mailboxes
; Note: 1-indexed, so 1 is hook-0
initial = 1
click-left = systemctl --user start mailboxes.service
click-right = kitty neomutt

[module/volume]
inherit = module/base
type = internal/pulseaudio
format-volume-margin = 1
format-volume-padding = 1
format-muted-margin = 1
format-muted-padding = 1

format-volume = " <ramp-volume><label-volume>"
format-muted = "  <label-muted>"

label-volume = "%percentage:3%%"
; label-muted = " "
label-muted = "%percentage:3%%"

ramp-volume-0 = " "
ramp-volume-1 = " "
ramp-volume-2 = " "

[module/wifi]
inherit = module/base
type = internal/network
interface = ${env:POLYBAR_WIFI_DEVICE:wlp110s0}
interval = 3.0
format-connected-padding = 0
format-disconnected-padding = 0

; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = <label-connected>
format-connected-prefix = ""
format-connected-prefix-padding = 1
label-connected-padding = 1

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>
format-disconnected-prefix = ""
format-disconnected-prefix-padding = 1
format-disconnected-prefix-background = ${theme.red_background1}
label-disconnected-background = ${theme.red_background}
label-disconnected-padding = 1

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <animation-packetloss> <label-connected>
animation-packetloss-padding = 1
animation-packetloss-background = ${theme.red_background1}
label-packetloss-background = ${theme.red_background}
label-packetloss-padding = 1

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
label-connected = %essid% %signal:3%%

; Available tokens:
;   %ifname%    [wireless+wired]
; Default: (none)
label-disconnected =

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %linkspeed% [wired]
; Default: (none)
;label-packetloss = %essid%
;label-packetloss-foreground = #eefafafa

; Only applies if <animation-packetloss> is used
animation-packetloss-0 = ⚠
animation-packetloss-1 = 
; Framerate in milliseconds
animation-packetloss-framerate = 500

[module/battery]
inherit = module/base
type = internal/battery

format-charging = " <label-charging>"
format-discharging = "<ramp-capacity><label-discharging>"
format-full = x
format-charging-padding = 2
format-discharging-padding = 2
format-full-padding = 0

label-full = ""

animation-charging-0 = " "
animation-charging-1 = " "
animation-charging-2 = " "
animation-charging-3 = " "
animation-charging-4 = " "
animation-charging-5 = " "
animation-charging-6 = " "
animation-charging-framerate=1500

ramp-capacity-foreground = ${theme.foreground}
ramp-capacity-0 = " "
ramp-capacity-1 = " "
ramp-capacity-2 = " "
ramp-capacity-3 = " "
ramp-capacity-4 = " "
ramp-capacity-5 = " "
ramp-capacity-6 = " "
ramp-capacity-7 = " "
ramp-capacity-8 = " "

