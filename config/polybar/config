;:set syn=dosini

[settings]
screenchange-reload = false
throttle-ms = 50
throttle-limit = 5
compositing-underline = source
compositing-overline = source
compositing-background = source

[theme]
include-file = /home/mange/.config/polybar/theme.ini

[bar/core]
override-redirect = false
locale = sv_SE.UTF-8
enable-ipc = true

fixed-center = true

foreground = ${theme.foreground}
background = ${theme.background}
line-color = ${theme.background}
line-size = ${env:POLYBAR_BAR_PADDING:4}

[bar/base]
inherit = bar/core

monitor = ${env:MONITOR}
font-0 = ${env:POLYBAR_FONT_0}
font-1 = ${env:POLYBAR_FONT_1}
font-2 = ${env:POLYBAR_FONT_2}

height = ${env:POLYBAR_BAR_HEIGHT:34}

; Make cursor look like the pointer (hand) when hovering clickable modules
cursor-click = pointer

[bar/primary]
inherit = bar/base
top = true

modules-left = i3 media-controls
modules-center = window-title
modules-right = task-counters mailboxes pending-updates weather volume battery wifi redshift clock time

tray-detached = false
tray-position = right
tray-offset-x = 0
tray-offset-y = 0
tray-maxsize = ${env:POLYBAR_TRAY_SIZE:24}
tray-padding = 4
tray-background = ${theme.background}
tray-scale = ${env:POLYBAR_TRAY_SCALE:1.0}

[bar/secondary]
inherit = bar/base
top = true

modules-left = i3
modules-center = window-title
modules-right = battery clock time

tray-position = none

[module/base]
format-padding = 1
format-overline = ${theme.background}
format-underline = ${theme.background}

[module/media-controls]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/media
click-left = playerctl play-pause
click-right = run-or-raise 'class = "Spotify"' spotify

[module/task-counters]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/task-counters
interval = 60
click-left = toggle-dropdown dropdown_vit kitty --class dropdown_vit vit
click-right = kitty vit

[module/i3]
inherit = module/base
type = internal/i3
pin-workspaces = true
strip-wsnumbers = true
index-sort = true
enable-click = true
enable-scroll = false
fuzzy-match = true

ws-icon-0 = 1:System;
ws-icon-1 = 2:Code;
ws-icon-2 = 3:Browse;
ws-icon-3 = 4;➍
ws-icon-4 = 5;➎
ws-icon-5 = 6;➏
ws-icon-6 = 7;❼
ws-icon-7 = 8:Game;
ws-icon-8 = 9:Media;
ws-icon-9 = 10:Chat;
ws-icon-default = 

format = "<label-state> <label-mode>"

label-mode = "  %mode%  "
label-mode-background = ${theme.red_background}

# Focused is the workspace that is currently getting commands
label-focused = " %icon% "
label-focused-background = ${theme.purple_background0}
label-focused-underline = ${theme.background}
label-focused-overline = ${theme.background}

# Unfocused are workspaces that are not visible
label-unfocused = " %icon% "
label-unfocused-background = ${theme.gray_background2}
label-unfocused-overline = ${theme.background}
label-unfocused-underline = ${theme.background}

# Urgent are workspaces with important events
label-urgent = " %icon% "
label-urgent-background = ${theme.orange_background}
label-urgent-overline = ${theme.background}
label-urgent-underline = ${theme.background}

# Visible are selected workspaces on other screens
label-visible = " %icon% "
label-visible-background = ${theme.purple_background1}
label-visible-overline = ${theme.background}
label-visible-underline = ${theme.background}

[module/window-title]
inherit = module/base
type = internal/xwindow
; NOTE: Counts the invisible %{} tokens, so this is (37 +) 50
label-maxlen = 87

label ="  类 %title%"
label-empty =

[module/clock]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/clock-icon
format-background = ${theme.aqua_background1}

[module/time]
inherit = module/base
type = internal/date
label = %date% %time%
date = %F%
date-alt = %A vecka %V
time = %H:%M
interval = 1
format-background = ${theme.aqua_background}

[module/mailboxes]
inherit = module/base
type = custom/ipc
hook-0 = ~/.config/polybar/mailboxes
; Note: 1-indexed, so 1 is the one on index 0
initial = 1

[module/pending-updates]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/pending-updates
interval = 240
click-left = kitty --hold zsh -c "sudo pacman -Syu"

[module/weather]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/weather
interval = 600
click-left = kitty --hold weather
click-right =

[module/redshift]
inherit = module/base
type = custom/script
exec = ~/.config/polybar/redshift-status
interval = 60
click-left = redshift-toggle
click-right =

[module/volume]
inherit = module/base
type = internal/pulseaudio

format-volume = "<ramp-volume><label-volume>"
format-muted = "  <label-muted>"

format-volume-overline = ${theme.background}
format-volume-underline = ${theme.background}
format-muted-overline = ${theme.background}
format-muted-underline = ${theme.background}

label-volume = " %percentage:3%% "
label-volume-background = ${theme.blue_background}
; label-muted = " "
label-muted = " %percentage:3%% "
label-muted-background = ${theme.gray_background}

ramp-volume-0 = "  "
ramp-volume-1 = "  "
ramp-volume-2 = "  "
ramp-volume-background = ${theme.blue_background1}

[module/wifi]
inherit = module/base
type = internal/network
interface = ${env:POLYBAR_WIFI_DEVICE:wlp110s0}
interval = 3.0
format-connected-padding = 0
format-disconnected-padding = 0

; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = <label-connected>
format-connected-prefix = ""
format-connected-prefix-padding = 1
format-connected-prefix-background = ${theme.green_background1}
label-connected-background = ${theme.green_background}
label-connected-padding = 1
format-connected-overline = ${theme.background}
format-connected-underline = ${theme.background}

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>
format-disconnected-prefix = ""
format-disconnected-prefix-padding = 1
format-disconnected-prefix-background = ${theme.red_background1}
label-disconnected-background = ${theme.red_background}
label-disconnected-padding = 1
format-disconnected-overline = ${theme.background}
format-disconnected-underline = ${theme.background}

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <animation-packetloss> <label-connected>
animation-packetloss-padding = 1
animation-packetloss-background = ${theme.red_background1}
label-packetloss-background = ${theme.red_background}
label-packetloss-padding = 1
format-packetloss-overline = ${theme.background}
format-packetloss-underline = ${theme.background}

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
label-connected = %essid% %signal:3%%

; Available tokens:
;   %ifname%    [wireless+wired]
; Default: (none)
label-disconnected =

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %linkspeed% [wired]
; Default: (none)
;label-packetloss = %essid%
;label-packetloss-foreground = #eefafafa

; Only applies if <animation-packetloss> is used
animation-packetloss-0 = ⚠
animation-packetloss-1 = 
; Framerate in milliseconds
animation-packetloss-framerate = 500

[module/battery]
inherit = module/base
type = internal/battery
full-at = 100

format-charging = <animation-charging><label-charging>
format-discharging = "<ramp-capacity><label-discharging>%{B-}"
format-full = <ramp-capacity><label-full>
format-charging-padding = 2
format-discharging-padding = 2
format-full-padding = 2

format-charging-overline = ${theme.background}
format-charging-underline = ${theme.background}
format-discharging-overline = ${theme.background}
format-discharging-underline = ${theme.background}
format-full-overline = ${theme.background}
format-full-underline = ${theme.background}

label-full-background = ${theme.green_background}
label-full-padding = 1
label-charging-background = ${theme.orange_background}
label-charging-padding = 1
; label-discharging-background = ${theme.orange_background}
label-discharging-padding = 1

animation-charging-background = ${theme.orange_background1}
animation-charging-0 = "  "
animation-charging-1 = "  "
animation-charging-2 = "  "
animation-charging-3 = "  "
animation-charging-4 = "  "
animation-charging-framerate=1500

ramp-capacity-foreground = ${theme.foreground}
ramp-capacity-0 = "%{B#779d0006}  %{B#55fb4934}"
ramp-capacity-1 = "%{B#779d0006}  %{B#55fb4934}"
ramp-capacity-2 = "%{B#77af3a03}  %{B#55fb4934}"
ramp-capacity-3 = "%{B#7779740e}  %{B#55b8bb26}"
ramp-capacity-4 = "%{B#7779740e}  %{B#55b8bb26}"

