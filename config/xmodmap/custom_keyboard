!
! Based on QWERTY
!

! åäö on ordinary Swedish layout, but on modifier
keycode 34 = bracketleft braceleft aring Aring
keycode 47 = semicolon colon odiaeresis Odiaeresis
keycode 48 = apostrophe quotedbl adiaeresis Adiaeresis

! nbsp on modifier space
keycode 65 = space NoSymbol nobreakspace

! Swap ~ location
keycode 94 = grave asciitilde dead_acute dead_tilde

! Extra letters
keycode 26 = e E eacute Eacute

! Special characters
! Ellipsis …
keycode 60 = period greater U2026 U2026

! Right alt should be Mode_Switch for special keys above.
! keysym Alt_R = Mode_switch
keycode 108 = Mode_switch Mode_switch Mode_switch Mode_switch

! Right Super should be Compose
! keysym Super_R
keycode 134 = Multi_key

! Same with "Menu" key (the one that opens the Right Click menu)
! keysym Menu = Multi_key
keycode 135 = Multi_key
