; vim: ft=ini
[KillThreadsFilter]

[ListMailsFilter]

[ArchiveSentMailsFilter]

[FolderNameFilter]
maildir_separator = /
folder_blacklist = archive

[Filter]
message = 'Removing the "new" tags'
tags = -new

[MailMover]
folders = gmail/inbox gmail/important gmail/archive hemnet/inbox hemnet/important hemnet/archive devbox/inbox devbox/important devbox/archive
max_age = 30

; Required for mbsync
rename = True

gmail/inbox = 'NOT tag:inbox':gmail/archive
gmail/important = 'NOT tag:important':gmail/archive
gmail/archive = 'tag:important AND NOT folder:gmail/important':gmail/important

hemnet/inbox = 'NOT tag:inbox':hemnet/archive
hemnet/important = 'NOT tag:important':hemnet/archive
hemnet/archive = 'tag:important AND NOT folder:hemnet/important':hemnet/important

devbox/inbox = 'NOT tag:inbox':devbox/archive
devbox/important = 'NOT tag:important':devbox/archive
devbox/archive = 'tag:important AND NOT folder:devbox/important':devbox/important
