; vim:ft=ini

[general]
status_path = "~/.local/share/vdirsyncer/status"

[pair contacts]
a = "contacts_local"
b = "contacts_remote"
collections = ["from a", "from b"]

[storage contacts_local]
type = "filesystem"
path = "~/Contacts/personal"
fileext = ".vcf"

[storage contacts_remote]
type = "google_contacts"
read_only = true
token_file = "~/.local/share/vdirsyncer/contacts_token"
client_id = "727231548834-6arhcpcs9ed1it49pj0t8nrqkirjqqcp.apps.googleusercontent.com"
client_secret.fetch = ["command", "cat", "/home/mange/.local/share/vdirsyncer/google_client_secret"]

