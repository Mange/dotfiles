#!/usr/bin/env zsh
# Navigation tricks and shortcuts

setopt auto_pushd
setopt pushd_ignore_dups

# cd to files to go to containing directories
# Nice when you paste a filename
cd () {
  if (( $# != 1 )); then
    builtin cd "$@"
    return
  fi

  if [[ -f "$1" ]]; then
    builtin cd "$1:h"
  else
    builtin cd "$1"
  fi
}

alias tree='tree -AC -I ".svn|.git"'
alias t='tree -L 3 --filelimit 50'

alias ls='ls --color=auto'
alias l='ls -l'

eval $(dircolors -b)
# Files that I don't have to pay attention to
export LS_COLORS="$LS_COLORS:*.nfo=90:*.sfv=90:*.srt=90:*.sub=90"
export ZLS_COLORS=$LS_COLORS

