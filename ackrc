# Type modifications
--type-add=php=.inc
--type-add=js=.coffee
--type-add=css=.sass,.scss
# Legacy code at work uses .rake and .cap for rake and capistrano.
--type-add=ruby=.rake,.cap

# Custom types
--type-set=erb=.erb
--type-set=sass=.sass,.scss
--type-set=haml=.haml
--type-set=gherkin=.feature
--type-set=config=.ini,.cfg,.config
--type-set=log=.log,.stdout,.stderr

# Additional directories to ignore
--ignore-dir=node_modules
--ignore-dir=bower_components
--ignore-dir=tmp
--ignore-dir=coverage
--ignore-dir=target

# Don't search logs by default
--no-log
